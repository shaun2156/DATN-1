{% extends "layouts/app.twig" %}

{% block content %}
<div style="margin-top: 5%;">
    <h1>Create Storage</h1>
    <form method="POST" action="{{ path_for('storages.update', { id: storage.storage_id }) }}">
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Storage Name</label>
            <div class="col-sm-8">
                <input type="text" id="name" name="name" class="form-control"
                    placeholder="Name" required value="{{ storage.name }}">
            </div>
        </div>
        <div class="form-group row">
            <label for="description" class="col-sm-2 col-form-label">Address</label>
            <div class="col-sm-8">
                <input type="text" id="address" name="address" class="form-control"
                    placeholder="Address" value="{{ storage.address }}" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="manager" class="col-sm-2 col-form-label">Manager</label>
            <div class="dropdown col-sm-8">
                <select class="custom-select" required name="manager">
                    <option selected disabled value="">Assign Manager</option>
                    {% for manager in managers %}
                        <option value="{{manager.employee_id}}">{{ manager.person.full_name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="{{ path_for('storages.index') }}" class="btn btn-warning">Cancel</a>
    </form>
</div>
{% endblock %}
